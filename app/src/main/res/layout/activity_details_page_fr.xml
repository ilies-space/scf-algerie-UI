<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dcdde1"
    tools:context=".detailsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">



        <TextView
            android:fontFamily="@font/robotobold"
            android:id="@+id/codetv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="#FFF"
            android:text="définition :"
            android:textSize="25sp" />

        <ImageButton

            android:id="@+id/backBtn"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:onClick="close"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FFF" />

    </LinearLayout>

    <LinearLayout
        android:padding="10sp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:background="@drawable/roundedbgcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/robotobold"
            android:textColor="@android:color/white"
            android:background="@drawable/roundedbg"
            android:padding="20dp"
            android:id="@+id/Descriptiontv"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:gravity="center"
            android:text="50"
            android:textSize="20sp" />

        <TextView

            android:fontFamily="@font/robotobold"
            android:id="@+id/nametv"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="Services bancaires et  assimilés dfefefsdsd"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="20sp"

            />

        <TextView
            android:textAlignment="textStart"
            android:padding="15sp"
            android:fontFamily="@font/robotoregular"
            android:id="@+id/codetv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="Description: non disponible.\n Il n'y a actuellement aucune information supplémentaire sur cet article. Vous pouvez trouver plus de détails dans le livre proposé"
            android:textColor="#000"
            android:scrollbars = "vertical"

            android:textSize="20sp"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"

        android:background="@color/color1"
        android:layout_margin="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/codetv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text= " espace publicitaire "
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ecf0f1"
    tools:context=".detailsPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="4dp">


        <ImageButton

            android:id="@+id/backBtn"
            android:layout_width="50sp"
            android:layout_height="40sp"
            android:background="@android:color/transparent"
            android:onClick="close"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FFF" />

        <TextView
            android:textStyle="bold"
            android:fontFamily="@font/zahra"
            android:id="@+id/codetv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="تعريف :"
            android:textColor="#FFF"
            android:textSize="28sp" />

    </LinearLayout>

    <LinearLayout
        android:padding="10sp"
        android:layout_margin="30dp"
        android:layout_weight="1"
        android:background="@drawable/roundedbgcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/robotobold"
            android:textColor="@android:color/white"
            android:background="@drawable/roundedbg"
            android:padding="20dp"
            android:id="@+id/Descriptiontv"
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:layout_margin="30sp"
            android:gravity="center"
            android:text="50"
            android:textSize="20sp" />

        <TextView
            android:fontFamily="@font/zahra"
            android:textStyle="bold"
            android:id="@+id/nametv"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text=" الإحتياطيات (القانونية، النظامية، الأساسية، العادية، المقننة)الإحتياطيات (القانونية، النظامية، الأساسية، العادية، المقننة)"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="21sp"

            />

        <TextView
            android:textAlignment="textStart"
            android:padding="10sp"
            android:fontFamily="@font/zahra"
            android:id="@+id/codetv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:text="الوصف :غير متاح .  \n لا توجد معلومات إضافية حاليا حول هذا العنصر . يمكنك ان تجد تفاصيل أكثر ، في الكتاب المقترح ."
            android:scrollbars = "vertical"
            android:textSize="25sp"
            android:textColor="#000"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="bottom"

        android:background="@color/color1"
        android:layout_margin="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@android:color/white"
            android:id="@+id/codetv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text= " espace publicitaire "
            android:textAlignment="center"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>